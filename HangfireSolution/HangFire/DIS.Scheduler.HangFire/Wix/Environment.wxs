<?xml version="1.0" encoding="utf-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
    <Fragment>
        <UI>
            <Dialog Id="EnvironmentDlg" Width="370" Height="270" Title="[ProductName] Setup">
                <!-- Layout. -->
                <Control Id="BannerBitmap" Type="Bitmap" X="0" Y="0" Width="380" Height="44" TabSkip="no" Text="!(loc.LicenseAgreementDlgBannerBitmap)" />
                <Control Id="BannerLine" Type="Line" X="0" Y="45" Width="375" Height="2" />
                <Control Id="BottomLine" Type="Line" X="0" Y="234" Width="370" Height="0" />
                <!-- Content. -->
                <Control Id="InstallText" Type="Text" X="25" Y="64" Width="320" Height="25" Text="Choose the environment to which [ProductName] is being installed." />
                <Control Id="EnvironmentCombobox" Type="RadioButtonGroup" Property="ENVIRONMENT" X="30" Y="94" Width="305" Height="100">
                    <RadioButtonGroup Property="ENVIRONMENT">
                        <RadioButton Text="Development" Value="DEV" X="0" Y="0" Width="200" Height="15" />
                        <RadioButton Text="UAT" Value="UAT" X="0" Y="20" Width="200" Height="15" />
                        <RadioButton Text="Production" Value="PROD" X="0" Y="40" Width="200" Height="15" />
                    </RadioButtonGroup>
                </Control>
                <!-- Navigation. -->
                <Control Id="Back" Type="PushButton" X="180" Y="243" Width="56" Height="17" Text="!(loc.WixUIBack)" />
                <Control Id="Next" Type="PushButton" X="236" Y="243" Width="56" Height="17" Default="yes" Text="!(loc.WixUINext)">
                    <!-- Don't allow user to continue until they have selected an environment. -->
                    <Condition Action="disable">ENVIRONMENT = ""</Condition>
                    <Condition Action="enable"><![CDATA[ENVIRONMENT <> ""]]></Condition>
                </Control>
                <Control Id="Cancel" Type="PushButton" X="304" Y="243" Width="56" Height="17" Cancel="yes" Text="!(loc.WixUICancel)">
                    <Publish Event="SpawnDialog" Value="CancelDlg">1</Publish>
                </Control>
            </Dialog>
        </UI>
    </Fragment>
</Wix>